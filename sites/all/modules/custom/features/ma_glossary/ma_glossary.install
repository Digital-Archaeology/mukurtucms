<?php

/**
 * @file
 * Install, update, and uninstall functions for the glossary feature.
 */

/**
 * Enable the "Glossary" browse menu item
 */
function ma_glossary_install () {
  $item = array(
    'link_path' => 'glossary',
    'link_title' => 'Glossary',
    'menu_name' => 'menu-browse-menu',
    'weight' => -40,
    'expanded' => 0,
  );
  menu_link_save($item);
}