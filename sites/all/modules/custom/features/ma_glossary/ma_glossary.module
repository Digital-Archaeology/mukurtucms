<?php
/**
 * @file
 * Code for the Mukurtu Glossary feature.
 */

include_once 'ma_glossary.features.inc';

function ma_glossary_node_view($node, $view_mode) {
  if($node->type == 'glossary') {
    if($view_mode == 'full') {
      foreach($node->field_glossary_terms[LANGUAGE_NONE] as $term) {
	dpm($term);
      }
    }
  }
}